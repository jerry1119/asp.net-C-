
@{
    ViewBag.Title = "短信验证";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="headertwo clearfloat" id="header">
    <a href="javascript:history.go(-1)" class="fl box-s"><i class="iconfont icon-arrow-l fl"></i></a>
    <p class="fl">短信验证</p>
</div>

<div class="modify clearfloat" id="main">
    <ul>
        @*<li class="clearfloat">
                <input type="text" name="" id="" value="" placeholder="130****9860" class="syzma fl" />
                <a href="#" class="fr">发送验证码</a>
            </li>*@
        <li class="clearfloat">
            <input type="text" name="" id="smsCode" value="" placeholder="请输入手机短信中的验证码" class="sname" />
        </li>
    </ul>
    <a href="#" id="btnCode" class="pay-btn clearfloat">
        验证
    </a>
</div>
@section FooterScript{
    <script type="text/javascript">
        $(function () {
            $("#btnCode").on("click", function () {
                var smsCode = $("#smsCode").val();
                $.ajax({
                    type: 'post',
                    datatype: 'json',
                    url: '/User/ForgotPassword2',
                    data: { smsCode: smsCode },
                    success: function (res) {
                        if (res.status == "ok") {
                            location.href = "/User/ForgotPassword3";
                        }
                        else {
                            alert(res.errorMsg);
                        }
                    },
                    error: function (res) {
                        alert("网络错误");
                    }
                });
            });
        });
    </script>
}
